@page
@model IndexModel
@{
    ViewData["Title"] = "Склад товаров";
}

<div class="container mt-4">
    <h1>Товары на складе</h1>

    <!-- Фильтры и сортировка -->
    <form method="get" class="row mb-3">
        <div class="col-md-3">
            <label class="form-label">Фильтр по названию</label>
            <input type="text" class="form-control" name="nameFilter" value="@Model.NameFilter" placeholder="Введите текст...">
        </div>
        <div class="col-md-2">
            <label class="form-label">Мин. цена</label>
            <input type="number" class="form-control" name="minPrice" value="@Model.MinPrice" step="0.01">
        </div>
        <div class="col-md-2">
            <label class="form-label">Макс. цена</label>
            <input type="number" class="form-control" name="maxPrice" value="@Model.MaxPrice" step="0.01">
        </div>
        <div class="col-md-2">
            <label class="form-label">Мин. количество</label>
            <input type="number" class="form-control" name="minQuantity" value="@Model.MinQuantity">
        </div>
        <div class="col-md-2">
            <label class="form-label">Сортировка</label>
            <select class="form-select" name="sortBy">
                <option value="">По дате (старое → новое)</option>
                <option value="nameAsc" selected="@(Model.SortBy == "nameAsc")">По названию (А → Я)</option>
                <option value="dateDesc" selected="@(Model.SortBy == "dateDesc")">По дате (новое → старое)</option>
            </select>
        </div>
        <div class="col-md-1 align-self-end">
            <button type="submit" class="btn btn-primary">Фильтровать</button>
        </div>
    </form>

    <!-- Таблица -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Название</th>
                <th>Описание</th>
                <th>Цена</th>
                <th>Количество</th>
                <th>Дата добавления</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.Quantity</td>
                    <td>@product.DateAdded.ToString("dd.MM.yyyy")</td>
                    <td>
                        <button type="button" class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#addModal" onclick="editProduct(@product.Id, '@product.Name', '@product.Description', @product.Price, @product.Quantity)">Редактировать</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Кнопка добавления -->
    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addModal">Добавить товар</button>
</div>

<!-- Модальное окно добавления/редактирования -->
<div class="modal fade" id="addModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Добавить/Редактировать товар</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-page-handler="Add">
                <div asp-validation-summary="All" class="text-danger"></div>  <!-- показ ошибок валидации -->
                <div class="modal-body">
                    <input type="hidden" id="productId" name="Id" value="0" />
                    <div class="mb-3">
                        <label class="form-label">Название</label>
                        <input type="text" class="form-control" id="nameInput" name="Name" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Описание</label>
                        <input type="text" class="form-control" id="descInput" name="Description">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Цена</label>
                        <input type="number" class="form-control" id="priceInput" name="Price" step="0.01" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Количество</label>
                        <input type="number" class="form-control" id="quantityInput" name="Quantity" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function editProduct(id, name, desc, price, quantity) {
        document.getElementById('productId').value = id;
        document.getElementById('nameInput').value = name;
        document.getElementById('descInput').value = desc || '';
        document.getElementById('priceInput').value = price;
        document.getElementById('quantityInput').value = quantity;
        document.querySelector('.modal-title').textContent = 'Редактировать товар';
    }
</script>